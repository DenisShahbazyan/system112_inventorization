#:import ZBarCam kivy_garden.zbarcam.ZBarCam
#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol


<LoginScreen>:
    input_login: input_login
    input_password: input_password
    label_error: label_error
    input_password_field: input_password_field

    MDAnchorLayout:
        canvas:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        MDBoxLayout:
            spacing: 10
            orientation: 'vertical'
            size_hint: (0.75, 0.4)
            MDLabel:
                font_size: '20sp'
                text: 'Добро пожаловать!'
                halign: 'center'
            MDTextField:
                id: input_login
                hint_text: 'Логин'
                helper_text: 'Введите свой логин'
                helper_text_mode: 'on_focus'
                icon_left: 'email'
            ClickableTextFieldRound:
                id: input_password_field
                size_hint_y: None
                height: input_password.height
                MDTextField:
                    id: input_password
                    hint_text: 'Пароль'
                    password: True
                    helper_text: 'Введите свой пароль'
                    helper_text_mode: 'on_focus'
                    icon_left: 'key-variant'
                MDIconButton:
                    icon: 'eye-off'
                    pos_hint: {'center_y': .5}
                    pos: input_password.width - self.width + dp(8), 0
                    theme_text_color: 'Hint'
                    on_release:
                        self.icon = 'eye' if self.icon == 'eye-off' else 'eye-off'
                        input_password.password = False if input_password.password is True else True
            MDRectangleFlatButton:
                text: 'Войти'
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                on_release: root.sign_in()
            MDLabel:
                id: label_error
                font_size: '14sp'
                text: ''
                color: (1, 0, 0, 1)
                halign: 'center'


<MenuScreen>:
    zbarcam: zbarcam
    qrfield: qrfield

    BoxLayout:
        orientation: 'vertical'
        MDTabs:
            Tab:
                title: 'Сканировать'
                ZBarCam:
                    id: zbarcam
                    code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13
                    pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                    size_hint: [1, 0.5]
                MDTextField:
                    id: qrfield
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])
                    on_text: root.scan(self.text)
            Tab:
                title: 'Добавить'
            Tab:
                title: 'Список'
            Tab:
                title: 'Генерировать'

